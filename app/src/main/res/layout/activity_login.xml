<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/_10sdp"
    android:background="@color/bg_color"
    tools:context=".view.auth.LoginActivity">

    <ImageView
        android:id="@+id/smartpju_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_25sdp"
        android:src="@drawable/ic_logo" />

    <TextView
        android:id="@+id/txt_welcome"
        android:layout_below="@+id/smartpju_logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginTop="@dimen/_30sdp"
        android:text="Selamat Datang"
        android:fontFamily="@font/inter_semi_bold"
        android:textColor="@color/semi_black"
        android:textSize="@dimen/_24ssp"/>

    <TextView
        android:id="@+id/txt_description"
        android:layout_below="@+id/txt_welcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginTop="@dimen/_10sdp"
        android:text="Dinas Perhubungan Kabupaten Sleman"
        android:fontFamily="@font/inter_medium"
        android:textColor="@color/grey_font"
        android:textSize="@dimen/_14ssp"/>

    <RelativeLayout
        android:id="@+id/lyt_phone"
        android:layout_below="@+id/txt_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_50sdp"
        android:padding="@dimen/_10sdp"
        android:background="@drawable/grey_et_border">

        <EditText
            android:id="@+id/et_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:backgroundTint="@color/white"
            android:hint="Username"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/lyt_password"
        android:layout_below="@+id/lyt_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:padding="@dimen/_10sdp"
        android:background="@drawable/grey_et_border">

        <EditText
            android:id="@+id/et_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_toStartOf="@+id/show_pass_btn"
            android:backgroundTint="@color/white"
            android:hint="Password"
            android:inputType="textPassword" />

        <ImageView
            android:id="@+id/show_pass_btn"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_5sdp"
            android:src="@drawable/ic_register_pass" />

    </RelativeLayout>

    <Button
        android:id="@+id/btnLogin"
        style="@style/firstbutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/_30sdp"
        android:layout_marginBottom="@dimen/_150sdp"
        android:fontFamily="@font/inter_medium"
        android:padding="@dimen/_12sdp"
        android:text="Masuk"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnLoginInvisible"
        style="@style/secondbutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/_150sdp"
        android:layout_marginTop="@dimen/_30sdp"
        android:fontFamily="@font/inter_medium"
        android:padding="@dimen/_12sdp"
        android:text="Masuk"
        android:visibility="gone"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</RelativeLayout>