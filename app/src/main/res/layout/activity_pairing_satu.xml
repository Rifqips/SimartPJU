<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    tools:context=".view.pairing.pairingsatu.PairingSatuActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_70sdp"
        android:padding="@dimen/_10sdp"
        android:elevation="@dimen/_10sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/white">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="@+id/top_bar"
            app:layout_constraintTop_toTopOf="@+id/top_bar"
            app:layout_constraintBottom_toBottomOf="@+id/top_bar"
            android:src="@drawable/ic_arrow_back"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Mode Satu"
            android:textSize="@dimen/_16ssp"
            android:layout_marginVertical="17dp"
            android:fontFamily="@font/inter_medium"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="@+id/top_bar"
            app:layout_constraintEnd_toEndOf="@+id/top_bar"
            app:layout_constraintTop_toTopOf="@+id/top_bar"
            app:layout_constraintBottom_toBottomOf="@+id/top_bar" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="580dp"
        android:layout_marginHorizontal="@dimen/_20sdp"
        app:layout_constraintTop_toBottomOf="@+id/top_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:cardCornerRadius="@dimen/_10sdp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/const_field_add"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_28sdp">


            <ImageView
                android:id="@+id/progressbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/progressbar_one"
                app:layout_constraintTop_toTopOf="@id/const_field_add"
                app:layout_constraintStart_toStartOf="@id/const_field_add"
                app:layout_constraintEnd_toEndOf="@id/const_field_add"/>

            <TextView
                android:id="@+id/tv_tittle_key"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:fontFamily="@font/inter_medium"
                android:textSize="@dimen/_12ssp"
                android:text="Masukkan Key : "
                android:layout_marginVertical="@dimen/_40sdp"
                app:layout_constraintTop_toBottomOf="@+id/progressbar"
                app:layout_constraintStart_toStartOf="@id/const_field_add"/>

            <EditText
                android:id="@+id/et_content_key"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:fontFamily="@font/inter_regular"
                android:textSize="@dimen/_12ssp"
                android:paddingStart="@dimen/_10sdp"
                android:background="@drawable/rounded_grey"
                android:textColor="@color/grey_font_detail"
                android:textColorHint="@color/grey_font_detail"
                android:hint="Masukkan Key"
                android:layout_marginVertical="@dimen/_10sdp"
                app:layout_constraintEnd_toEndOf="@+id/const_field_add"
                app:layout_constraintTop_toBottomOf="@+id/tv_tittle_key"
                app:layout_constraintStart_toStartOf="@id/const_field_add"/>

            <TextView
                android:id="@+id/tv_tittle_questions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/_12sdp"
                android:layout_marginTop="12dp"
                android:text="Masukan ID PJU:"
                android:textColor="@color/black"
                android:fontFamily="@font/inter_medium"
                android:textSize="@dimen/_12ssp"
                app:layout_constraintStart_toStartOf="@id/const_field_add"
                app:layout_constraintTop_toBottomOf="@+id/et_content_key" />

            <EditText
                android:id="@+id/et_content_question"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_81sdp"
                android:textColor="@color/grey_font_detail"
                android:textColorHint="@color/grey_font_detail"
                android:fontFamily="@font/inter_regular"
                android:textSize="@dimen/_12ssp"
                android:gravity="top"
                android:paddingStart="@dimen/_10sdp"
                android:paddingTop="@dimen/_10sdp"
                android:background="@drawable/rounded_grey"
                android:hint="Masukan ID PJU:"
                android:layout_marginVertical="@dimen/_10sdp"
                app:layout_constraintTop_toBottomOf="@+id/tv_tittle_questions"
                app:layout_constraintStart_toStartOf="@id/const_field_add"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:id="@+id/btn_next"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:orientation="horizontal"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            android:layout_gravity="bottom"
            app:layout_constraintBottom_toBottomOf="@+id/const_field_add"
            app:layout_constraintStart_toStartOf="@+id/const_field_add"
            app:layout_constraintEnd_toEndOf="@+id/const_field_add"
            android:background="@color/dark_blue">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Selanjutnya"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_marginStart="@dimen/_12sdp"
                android:fontFamily="@font/inter_semi_bold"
                android:textSize="@dimen/_12ssp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>