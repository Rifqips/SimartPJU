<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/bg_color"
    android:paddingHorizontal="@dimen/_16sdp"
    tools:context=".view.home.fragment.AkunFragment">

    <TextView
        android:id="@+id/tvTittle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Akun Saya"
        android:textSize="16sp"
        android:textAlignment="center"
        android:layout_marginVertical="17dp"
        android:fontFamily="@font/inter_medium"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardIdentity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:layout_marginVertical="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTittle"
        tools:ignore="UnusedAttribute">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constrainProfile"
            android:layout_width="match_parent"
            android:layout_height="139dp"
            android:background="@color/white">

            <ImageView
                android:id="@+id/ivSetImage"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginVertical="20dp"
                android:src="@drawable/ic_akun"
                app:layout_constraintTop_toTopOf="@+id/constrainProfile"
                app:layout_constraintStart_toStartOf="@+id/constrainProfile"
                app:layout_constraintEnd_toEndOf="@+id/constrainProfile"/>

            <TextView
                android:id="@+id/tvUsername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ari Subaja"
                android:textSize="16sp"
                android:textAlignment="center"
                android:layout_marginVertical="17dp"
                android:fontFamily="@font/inter_medium"
                android:textColor="@color/dark_blue"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ivSetImage"
                app:layout_constraintEnd_toEndOf="parent"/>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_information"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Informasi pribadi"
        android:textSize="@dimen/_16ssp"
        android:textAlignment="center"
        android:layout_marginVertical="@dimen/_34sdp"
        android:fontFamily="@font/inter_medium"
        android:textColor="@color/dark_blue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardIdentity"/>

    <ImageView
        android:id="@+id/iv_edit_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Informasi pribadi"
        android:src="@drawable/ic_edit_informasi"
        android:layout_marginVertical="@dimen/_34sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardIdentity"/>

    <TextView
        android:id="@+id/tv_title_fullname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nama Lengkap"
        android:textSize="@dimen/_16ssp"
        android:textAlignment="center"
        android:layout_marginVertical="@dimen/_34sdp"
        android:fontFamily="@font/inter_medium"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_information"/>

    <TextView
        android:id="@+id/tv_fullname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nama Lengkap"
        android:textSize="@dimen/_16ssp"
        android:textAlignment="center"
        android:layout_marginVertical="@dimen/_11sdp"
        android:fontFamily="@font/inter_medium"
        android:textColor="@color/grey_font"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_title_fullname"/>

    <TextView
        android:id="@+id/tv_title_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textSize="@dimen/_16ssp"
        android:textAlignment="center"
        android:layout_marginVertical="@dimen/_11sdp"
        android:fontFamily="@font/inter_medium"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_fullname"/>

    <TextView
        android:id="@+id/tv_useremail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textSize="@dimen/_16ssp"
        android:textAlignment="center"
        android:layout_marginVertical="@dimen/_11sdp"
        android:fontFamily="@font/inter_medium"
        android:textColor="@color/grey_font"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_title_email"/>

    <TextView
        android:id="@+id/tv_title_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textSize="@dimen/_16ssp"
        android:textAlignment="center"
        android:layout_marginVertical="@dimen/_11sdp"
        android:fontFamily="@font/inter_medium"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_useremail"/>

    <TextView
        android:id="@+id/tv_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textSize="@dimen/_16ssp"
        android:textAlignment="center"
        android:inputType="textPassword"
        android:layout_marginVertical="@dimen/_11sdp"
        android:fontFamily="@font/inter_medium"
        android:textColor="@color/grey_font"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_title_password"/>

    <Button
        android:id="@+id/btnLogout"
        style="@style/firstbutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_20sdp"
        android:fontFamily="@font/inter_medium"
        android:padding="@dimen/_12sdp"
        android:text="Keluar"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_password" />

</androidx.constraintlayout.widget.ConstraintLayout>