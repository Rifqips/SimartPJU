<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:padding="@dimen/_10sdp"
    tools:context=".view.auth.RegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_25sdp"
            android:src="@drawable/ic_logo" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginTop="@dimen/_15sdp"
            android:text="PENDAFTARAN"
            android:fontFamily="@font/inter_semi_bold"
            android:textColor="@color/semi_black"
            android:textSize="@dimen/_18ssp"/>

        <ImageView
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_60sdp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_15sdp"
            android:src="@drawable/ic_registrasi" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginTop="@dimen/_15sdp"
            android:text="Akun"
            android:fontFamily="@font/inter_medium"
            android:textColor="@color/semi_black"
            android:textSize="@dimen/_14ssp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:background="@drawable/grey_et_border">

            <EditText
                android:id="@+id/et_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_minus10sdp"
                android:backgroundTint="@color/white"
                android:hint="Username"
                android:padding="@dimen/_10sdp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/grey_et_border">

            <EditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_minus10sdp"
                android:layout_toStartOf="@+id/show_password_button"
                android:backgroundTint="@color/white"
                android:hint="Sandi"
                android:inputType="textPassword"
                android:padding="@dimen/_10sdp" />

            <ImageView
                android:id="@+id/show_password_button"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_5sdp"
                android:src="@drawable/ic_register_pass" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/grey_et_border">

            <EditText
                android:id="@+id/et_confirm_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_minus10sdp"
                android:layout_toStartOf="@+id/show_confirm_password_button"
                android:backgroundTint="@color/white"
                android:hint="Konfirmasi Sandi"
                android:inputType="textPassword"
                android:padding="@dimen/_10sdp" />

            <ImageView
                android:id="@+id/show_confirm_password_button"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_5sdp"
                android:src="@drawable/ic_register_pass" />

        </RelativeLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/const_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_30sdp">


            <Button
                android:id="@+id/btnRegister"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/firstbutton"
                android:fontFamily="@font/inter_medium"
                android:padding="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_30sdp"
                android:text="DAFTAR"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="@id/const_button"
                app:layout_constraintStart_toStartOf="@id/const_button"
                tools:ignore="MissingConstraints" />

            <Button
                android:id="@+id/btnRegisterInvisible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/secondbutton"
                android:fontFamily="@font/inter_medium"
                android:padding="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_30sdp"
                android:text="DAFTAR"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="MissingConstraints" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="@dimen/_15sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="anda sudah memiliki akun?"
                android:fontFamily="@font/inter_regular"
                android:textColor="@color/black"
                android:textSize="@dimen/_12ssp"/>

            <TextView
                android:id="@+id/txt_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:padding="@dimen/_10sdp"
                android:text="Masuk"
                android:fontFamily="@font/inter_semi_bold"
                android:textColor="@color/dark_blue"
                android:textSize="@dimen/_12ssp"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>