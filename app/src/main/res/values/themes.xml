<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.SismartPJU" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.SismartPJU" parent="Base.Theme.SismartPJU" />

    <style name="primaryteks">
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:fontFamily">@font/inter_semi_bold</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="secondaryteks">
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="thirdteks">
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="firstbutton">
        <item name="backgroundTint">@color/dark_blue</item>
        <item name="android:textSize">18sp</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:state_pressed">false</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="secondbutton">
        <item name="backgroundTint">@color/border_color</item>
        <item name="android:textSize">18sp</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:state_pressed">false</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>