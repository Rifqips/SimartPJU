<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.SismartPJU" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <!--        <item name="colorPrimary">@color/purple_500</item>-->
        <!--        <item name="colorPrimaryVariant">@color/purple_700</item>-->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/dark_blue</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dark_blue</item>
        <item name="colorSecondaryVariant">@color/dark_blue</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Base.Theme.SismartPJU.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay"
        parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay"
        parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.SismartPJU" parent="Base.Theme.SismartPJU" />

    <style name="primaryteks">
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:fontFamily">@font/inter_semi_bold</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="secondaryteks">
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="thirdteks">
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="firstbutton">
        <item name="backgroundTint">@color/dark_blue</item>
        <item name="android:textSize">18sp</item>
        <item name="cornerRadius">5dp</item>
        <item name="android:state_pressed">false</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="secondbutton">
        <item name="backgroundTint">@color/border_color</item>
        <item name="android:textSize">18sp</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:state_pressed">false</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="optionbutton">
        <item name="backgroundTint">@color/dark_blue</item>
        <item name="cornerRadius">5dp</item>
        <item name="android:state_pressed">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/inter_medium</item>
    </style>

</resources>